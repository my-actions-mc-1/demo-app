@{
    List<Employee> employees = ViewBag.employees;
}

<h1>Employees</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee employee in employees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <form method="post">
                        <a type="button" class="btn btn-primary" href="/editemployee/@employee.Id">Edit</a>
                        <button type="submit" class="btn btn-danger" asp-action="DeleteEmployee" value="@employee.Id" name="id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
